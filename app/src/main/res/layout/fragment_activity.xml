<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".ActivityFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutActivityRecord"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/tilActivityHint"
            app:helperText="Which activity do you want to track?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:startIconDrawable="@drawable/ic_baseline_directions_run_24">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/textEditActivityRecord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchGPSEnabled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/swGPSEnabledText"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutActivityRecord"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutActivityRecord"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutActivityRecord" />

        <Chronometer
            android:id="@+id/cmtActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:countDown="false"
            app:layout_constraintEnd_toEndOf="@+id/switchGPSEnabled"
            app:layout_constraintStart_toStartOf="@+id/switchGPSEnabled"
            app:layout_constraintTop_toBottomOf="@+id/switchGPSEnabled" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStartActivityRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btnStartActivity"
            app:layout_constraintStart_toStartOf="@+id/switchGPSEnabled"
            app:layout_constraintTop_toBottomOf="@+id/cmtActivity"
            tools:ignore="DuplicateClickableBoundsCheck"
            app:icon="@drawable/ic_baseline_not_started_24"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonStopActivityRecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/btnStopActivity"
            app:layout_constraintEnd_toEndOf="@+id/switchGPSEnabled"
            app:layout_constraintTop_toBottomOf="@+id/cmtActivity"
            app:icon="@drawable/ic_baseline_stop_circle_24"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>