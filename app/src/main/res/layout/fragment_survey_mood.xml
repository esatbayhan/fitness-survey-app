<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SurveyMoodFragment">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="1"
        android:scaleY="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSurveyMoodTitle"
                android:layout_width="match_parent"
                android:layout_height="105dp"
                android:fontFamily="serif"
                android:text="in the last 24 hours i felt..."
                android:textAlignment="center"
                android:textColor="#546E7A"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="325dp"
                        android:layout_height="49dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="satisfied"
                        android:textColor="#121010"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="dissatisfied"
                        android:textColor="#13100F"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="fill_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#804747"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white"
                    android:thumbTint="#C63C6B" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#151722"
                    tools:text="TextView" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="283dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="calm"
                        android:textColor="#100D0C"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="54dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="restless"
                        android:textColor="#120D0D"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#0F1012"
                    tools:text="TextView" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="330dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="well"
                        android:textColor="#1E1515"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="unwell"
                        android:textColor="#0B0707"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar3"
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#040405"
                    tools:text="TextView" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="322dp"
                        android:layout_height="42dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="relaxed"
                        android:textColor="#131010"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="tense"
                        android:textColor="#191616"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#101013"
                    tools:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="313dp"
                        android:layout_height="51dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="energetic"
                        android:textColor="#131010"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="powerless"
                        android:textColor="#0C0B0B"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#131417"
                    tools:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView20"
                        android:layout_width="319dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="awake"
                        android:textColor="#191717" />

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:fontFamily="sans-serif-smallcaps"
                        android:text="tired"
                        android:textColor="#090909"
                        android:textStyle="bold" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:textColor="#131417"
                    tools:text="TextView" />

            </LinearLayout>
            <include layout="@layout/stepper_survey" />

        </LinearLayout>

    </ScrollView>


</FrameLayout>