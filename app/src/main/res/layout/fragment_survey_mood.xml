<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SurveyMoodFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleX="1"
        android:scaleY="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewSurveyMoodTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="32dp"
                android:text="@string/textViewSurveyMoodTitleText"
                android:gravity="center"
                android:textSize="24sp" />

            <!--Satisfied - Dissatisfied-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSurveyMood1Positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/textViewSurveyMood1PositiveText" />

                    <TextView
                        android:id="@+id/textViewSurveyMood1Negative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/textViewSurveyMood1NegativeText" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar1"
                    android:layout_width="fill_parent"
                    android:layout_height="27dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:progressTint="#804747"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white"
                    android:thumbTint="#C63C6B" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#151722"
                    tools:text="TextView" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="64dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!--Calm - Restless-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSurveyMood2Positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/textViewSurveyMood2PositiveText" />

                    <TextView
                        android:id="@+id/textViewSurveyMood2Negative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/textViewSurveyMood2NegativeText" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar2"
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#0F1012"
                    tools:text="TextView" />


            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="64dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!-- Well - Unwell -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSurveyMood3Positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/textViewSurveyMood3PositiveText" />

                    <TextView
                        android:id="@+id/textViewSurveyMood3Negative"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/textViewSurveyMood3NegativeText" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar3"
                    android:layout_width="fill_parent"
                    android:layout_height="37dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#040405"
                    tools:text="TextView" />


            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="64dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!--Relaxed - Tense-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSurveyMood4Positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/textViewSurveyMood4PositiveText" />

                    <TextView
                        android:id="@+id/textViewSurveyMood4Negative"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/textViewSurveyMood4NegativeText" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar4"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#101013"
                    tools:text="TextView" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="64dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!--Energetic - Powerless-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSurveyMood5Positive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/textViewSurveyMood5PositiveText" />

                    <TextView
                        android:id="@+id/textViewSurveyMood5Negative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/textViewSurveyMood5NegativeText" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar5"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#131417"
                    tools:text="TextView" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="64dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp" />

            <!-- Awake - Powerless-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textViewSurveyMood6Positive"
                        android:layout_width="319dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/textViewSurveyMood6PositiveText" />

                    <TextView
                        android:id="@+id/textViewSurveyMood6Negative"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:text="@string/textViewSurveyMood6NegativeText" />
                </LinearLayout>

                <SeekBar
                    android:id="@+id/seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:max="100"
                    android:progress="0"
                    android:scaleX="1"
                    android:scaleY="2"
                    android:thumb="@color/white" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:textColor="#131417"
                    tools:text="TextView" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</FrameLayout>